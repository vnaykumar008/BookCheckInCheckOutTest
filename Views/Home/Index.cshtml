@model IEnumerable<BookStore.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index2</h2>
<script src="@Url.Content("~/Scripts/jquery-3.3.1.js")" type="text/javascript" ></script>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.RadioButton("id", item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverPrice)
            </td>
            <td>
                
                <span id="status_@item.Id">
                    @Html.DisplayFor(modelItem => item.Status)
                </span>
</td>
        </tr>
        }

    </table>
    <div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="CheckIn" name="submit" value="CheckIn" class="btn btn-default"  />
                <input type="submit" id="CheckOut" name="submit" value="CheckOut" class="btn btn-default" />
                <input type="submit" name="submit" value="Details" class="btn btn-default" />
            </div>
        </div>
    </div>    
    }

    <script>
        $(document).ready(function () {
            
            var a = $(':radio[name=id]');
            $(':radio[name=id]').change(function () {
                // read the value of the selected radio
                var value = $(this).val();
                var status = $('#status_' + value).text;

                if (value == '1') {
                    $('#CheckIn').prop('disabled', true);
                    $('#CheckOut').prop('disabled', false);
                }
                else {
                    $('#CheckIn').prop('disabled', false);
                    $('#CheckOut').prop('disabled', true);
                }
            });
        });


    </script>
